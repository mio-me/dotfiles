[user]
	name = Thorben Below
	email = below.thorben@inside-online.de
[core]
    editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[pull]
	rebase = true
[rebase]
	autoStash = true
[commit]
	gpgsign = true
[gpg]
	program = gpg
[tag]
	gpgsign = true
[init]
	defaultBranch = main
[color]
	ui = auto
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager-core
	credentialStore = gpg

[credential "https://git.fh-aachen.de"]
	provider = generic
